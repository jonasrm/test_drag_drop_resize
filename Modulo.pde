    super(posicao, tamanho);
  }
      
  //-------------------------------------------------------
  void display() {
    //rectMode(CENTER);
    strokeWeight(4);
    if (over) {
      if (drag) {
        stroke(255,0,0);
        fill(255,0,0,100);
        float xoff = mouseX-pmouseX;
        float yoff = mouseY-pmouseY;
        posicao.x+=xoff;
        posicao.y+=yoff;
      } else {
        stroke(150,0,0);
        fill(0,20);
      }
    } else {
      stroke(0);
      fill(255);
    }
    rect(posicao.x, posicao.y, tamanho.x, tamanho.y);
    noStroke();
    noFill();
    
