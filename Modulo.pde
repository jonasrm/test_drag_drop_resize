class Modulo extends ModuloBase {
  
  ModuloBase lu, lc, ld, ru, rc, rd, cu, cd;
  
  //-------------------------------------------------------
  Modulo(PVector posicao, PVector tamanho, boolean resizable) {
    super(posicao, tamanho, resizable);
